{
  "ConnectionStrings": {
    "DefaultConnection": "Server=${DB_HOST:localhost};Database=${DB_NAME:code_review_tool};User=${DB_USER:root};Password=${DB_PASSWORD:};Port=${DB_PORT:3306};CharSet=utf8mb4;"
  },
  "JwtSettings": {
    "Key": "${JWT_SECRET_KEY:change_me_in_production}"
  },
  "ServiceUrls": {
    "PhpAnalysisApi": "${PHP_ANALYSIS_API_URL:http://localhost:8000/api/analyze/files}",
    "InternalSecret": "${INTERNAL_SERVICE_SECRET:change_me_in_production}"
  },
  "AnalysisLimits": {
    "MaxFilesPerRun": 50,
    "MaxFileSizeBytes": 1048576,
    "AllowedExtensions": [
      ".php",
      ".js",
      ".jsx",
      ".ts",
      ".tsx",
      ".cs",
      ".html",
      ".css",
      ".sql",
      ".java",
      ".py",
      ".rb",
      ".go",
      ".c",
      ".cpp",
      ".vue",
      ".json",
      ".xml",
      ".yaml",
      ".yml"
    ],
    "ExcludedPaths": [
      "node_modules/",
      "vendor/",
      "bin/",
      "obj/",
      ".git/",
      "dist/",
      "build/",
      "coverage/",
      "__pycache__/"
    ]
  },
  "Cors": {
    "AllowedOrigins": "${ALLOWED_ORIGINS:http://localhost:3000}"
  },
  "RateLimiting": {
    "RequestsPerMinute": 60,
    "RequestsPerHour": 1000
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "dotnet_api": "Information"
    }
  },
  "AllowedHosts": "*"
}